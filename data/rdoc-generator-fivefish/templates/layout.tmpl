<html lang="en">
<head>
	<title><?escape rdoc_options.title ?></title>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link href="[?attr rel_prefix ?]/css/fivefish.css" rel="stylesheet" />

	<!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
	<!--[if lt IE 9]>
		<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<link rel="shortcut icon" href="images/favicon.ico">
	<link rel="apple-touch-icon" href="images/apple-touch-icon.png">
	<link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
	<link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">

	<script src="[?attr rel_prefix ?]/js/jquery-1.7.1.min.js" type="text/javascript"
		defer="defer" charset="utf-8"></script>
	<script src="[?attr rel_prefix ?]/js/bootstrap.min.js" type="text/javascript"
		defer="defer" charset="utf-8"></script>
	<script src="[?attr rel_prefix ?]/js/jquery.dropdown.js" type="text/javascript"
		defer="defer" charset="utf-8"></script>
	<script src="[?attr rel_prefix ?]/js/jquery.hotkeys.js" type="text/javascript"
		defer="defer" charset="utf-8"></script>
	<script src="[?attr rel_prefix ?]/js/fivefish.js" type="text/javascript"
		defer="defer" charset="utf-8" onload="initFivefish()"></script>
</head>

<body class="[?attr pageclass ?]">

	<nav class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>

				<a class="brand"
					href="[?attr rel_prefix ?]/index.html"><?escape rdoc_options.title ?></a>

				<div class="nav-collapse">
					<ul class="nav">
						<li>
							<a href="#"
								class="dropdown-toggle"
								data-dropdown="#class-dropdown">
								Classes
								<b class="caret"></b>
							</a>
						</li>
						<li>
							<a href="#"
								class="dropdown-toggle"
								data-dropdown="#file-dropdown">
								Files
								<b class="caret"></b>
							</a>
						</li>
					</ul>
				</div><!--/.nav-collapse -->
				<form class="navbar-search pull-right">
					<input type="text" class="search-query" placeholder="Search">
				</form>
			</div>
		</div>
	</nav>

	<div class="container">
		<?attr contents ?>

		<hr>

		<footer>
			<div class="container">
				<span id="rdoc-version">Generated by RDoc <?attr rdoc_version ?>.</span> using the
				<span id="generator-version"><?attr fivefish_version ?> generator.</span>
			</div>
		</footer>
	</div> <!-- /container -->

	<!-- Class dropdown menu -->
	<div id="class-dropdown" class="dropdown-menu has-scroll">
	<ul>
	<?for index_class in modsort.select( &:documented? ) ?>
		<li><a href="[?attr rel_prefix ?]/[?call index_class.path ?]"><?call 
			index_class.full_name ?></a></li>
	<?end for ?>
	</ul>
	</div>

	<!-- File dropdown menu -->
	<div id="file-dropdown" class="dropdown-menu has-scroll">
	<ul>
	<?for file in files.select {|f| f.text? }.sort ?>
		<li><a href="[?attr rel_prefix ?]/[?call file.path ?]"><?escape
			file.page_name ?></a></li>
	<?end for ?>
	</ul>
	</div>

	<!-- Keyboard shortcut help -->
	<div class="modal" id="shortcut-help">
		<div class="modal-header">
			<a class="close" data-dismiss="modal">Ã—</a>
			<h3>Keyboard Shortcuts</h3>
		</div>
		<div class="modal-body">
			<table>
				<tbody>
					<tr>
						<th>/</th>
						<td>Search</td>
					</tr>
					<tr>
						<th>?</th>
						<td>Show this help</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

</body>
</html>
